<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>new drink form</title>
  </head>
  <body>
    <h1>Add New Drink</h1>
    <form action="/drinks" method="post">
      <div class="form-group">
        <label>Alcohol</label>
        <input type="checkbox" name="alcohol">
      </div>
      <div class="form-group">
        <label>Drink type: </label>
        <input type="text" name="drinkType">
      </div>
      <div class="form-group">
        <label>Drink name: </label>
        <input type="text" name="drinkName">
      </div>
      <div class="form-group">
        <input type="submit" value="submit">
      </div>
    </form>
  </body>
</html>
